<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/overlord">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="25"
            android:id="@+id/textWrapper">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/resultScrollView"
                android:layout_gravity="center_vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/result"
                    android:textSize="50dp" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/one"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/two"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/three"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add"
                android:id="@+id/buttonAdd"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/equal"
                android:id="@+id/buttonEqual"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row3">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/four"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/five"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/six"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/sub"
                android:id="@+id/buttonSub"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mode"
                android:id="@+id/buttonMode"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/seven"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/eight"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/nine"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mult"
                android:id="@+id/buttonMult"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/del"
                android:id="@+id/buttonDel"
                android:layout_weight="1"
                android:onClick="popChar" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/dot"
                android:id="@+id/buttonDot"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/zero"
                android:id="@+id/button0"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/paren"
                android:id="@+id/buttonParen"
                android:layout_weight="1"
                android:onClick="paren" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/div"
                android:id="@+id/buttonDiv"
                android:layout_weight="1"
                android:onClick="insertCharToTextField" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ac"
                android:id="@+id/buttonAC"
                android:layout_weight="1"
                android:onClick="allClear" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
